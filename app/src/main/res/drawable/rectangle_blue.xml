<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--元件的漸層-->

            <gradient
                android:startColor="#0000FF"
                android:centerColor="#0000FF"
                android:endColor="#0000FF"
                android:angle="270" />

            <!--邊框顏色、粗細-->
            <stroke
                android:width="1dp"
                android:color="#000" />

            <!--圓角-->
            <corners android:radius="0dp" />


        </shape>
    </item>
</selector>